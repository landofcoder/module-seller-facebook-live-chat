<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="lofmp-facebook-live-chat" type="host">*.facebook.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="lofmp-facebook-live-chat-frameall" type="host">*.facebook.com</value>
                <value id="lofmp-facebook-live-chat-frame" type="host">https://www.facebook.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
